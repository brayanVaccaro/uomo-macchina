<h1>Rimborsi</h1>
<div class="text-center">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Importo (€)
                </th>
                <th>
                    Data
                </th>
                <th>
                    Commessa
                </th>
                <th>
                    Carta Aziendale
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.rimborsi.rimborsi.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="rimborso in model.rimborsi.rimborsi" v-on:click='navigateToEdit(rimborso.id, "Rimborsi")'>
                
                <td class="text-nowrap">
                    {{rimborso.importo}}
                </td>
                <td class="text-nowrap">
                    {{rimborso.data}}
                </td>
                <td class="text-nowrap">
                    {{rimborso.commessa}}
                </td>
                <td class="text-nowrap">
                    {{rimborso.cartaAziendale}}
                </td>
                <td class="text-nowrap">
                    {{rimborso.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

