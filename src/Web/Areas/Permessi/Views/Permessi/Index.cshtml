@using Core.Models;
@inject IHtmlLocalizer<UomoMacchina.Areas.Permessi.Data.PermessiViewModel> ModelLocalizer
@model UomoMacchina.Areas.Permessi.Data.PermessiViewModel

@* Index di Permessi *@
@{
 
}
<div class="row justify-content-start align-items-center">
    <div class="col">
        <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#tabellaPermessi" aria-expanded="false" aria-controls="tabellaPermessi"><h1>Permessi</h1></button>
    </div>
    <div class="col">
        <ul class="navbar-nav flex-wrap ms-auto">
            <li>
                <a class="Nuovo btn btn-light ms-2" v-on:click='navigateToEdit(null, "Permessi", dataNew)' title="Inserisci un nuovo elemento">
                    <i class="fa-solid fa-plus"></i>&nbsp;Nuovo
                </a>
            </li>
        </ul>
    </div>
</div>

<div id="tabellaPermessi" class="text-center collapse multi-collapse">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Data
                </th>
                <th>
                    Ora Inizio
                </th>
                <th>
                    Ora Fine
                </th>
                <th>
                    Durata
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.permessi.permessi.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="permesso in model.permessi.permessi" v-on:click='navigateToEdit(permesso.id, "Permessi")'>
                <td class="text-nowrap">
                    {{permesso.data.split('T')[0]}}
                </td>
                <td class="text-nowrap">
                    {{permesso.oraInizio.split('T')[1]}}
                </td>
                <td class="text-nowrap">
                    {{permesso.oraFine.split('T')[1]}}
                </td>
                <td class="text-nowrap">
                    {{permesso.durata}}
                </td>
                <td class="text-nowrap">
                    {{permesso.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

@section styles {
    <link href="~/css/richieste.css" rel="stylesheet" />
}

@section scripts {
    
}
