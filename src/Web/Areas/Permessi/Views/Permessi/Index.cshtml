<h1>Permessi</h1>
<div class="text-center">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Data
                </th>
                <th>
                    OraInizio
                </th>
                <th>
                    OraFine
                </th>
                <th>
                    Durata
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.permessi.permessi.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="permesso in model.permessi.permessi">
                <td class="text-nowrap">
                    {{permesso.data}}
                </td>
                <td class="text-nowrap">
                    {{permesso.oraInizio}}
                </td>
                <td class="text-nowrap">
                    {{permesso.oraFine}}
                </td>
                <td class="text-nowrap">
                    {{permesso.durata}}
                </td>
                <td class="text-nowrap">
                    {{permesso.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

