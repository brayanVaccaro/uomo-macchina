@model UomoMacchina.Areas.Login.Data.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h3>Rendicontazione</h3>
<div class="row">
    
    @* sito *@
    <div class="wrapper">
        <div class="rec-prism">
            <div class="face face-top">
                <div class="content">
                </div>
            </div>
            <div class="face face-front">
                <div class="content">
                    <h2>Sign in</h2>
                    <form method="post">
                        <input asp-for="ReturnUrl" type="hidden" />
                        <div class="field-wrapper">
                            <input asp-for="Email" type="text" name="email" placeholder="email">
                            <label>Email</label>
                        </div>
                        <div class="field-wrapper">
                            <input asp-for="Password" id="password" type="password" name="password" placeholder="password" autocomplete="new-password">
                            <label>password</label>
                            <div class="icon-wrapper" onclick="togglePasswordVisibility()">
                                <i class="fa fa-eye" id="togglePasswordIcon" aria-hidden="true"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-check form-switch">
                                <input asp-for="RememberMe" class="form-check-input" role="switch">
                                <label asp-for="RememberMe" class="form-check-label">Rimani Connesso</label>
                            </div>
                        </div>
                        <div class="field-wrapper">
                            <input type="submit" onclick="showThankYou()">
                        </div>
                    </form>
                </div>
            </div>
            <div class="face face-back">
                <div class="content">
                </div>
            </div>
            <div class="face face-right">
                <div class="content">
                </div>
            </div>
            <div class="face face-left">
                <div class="content">
                </div>
            </div>
            <div class="face face-bottom">
                <div class="content">
                    <div class="thank-you-msg">
                        Thank you!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section styles {
    <link href="~/css/login.css" rel="stylesheet" />
}

