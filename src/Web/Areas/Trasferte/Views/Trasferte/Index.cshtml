@using Core.Models;
@inject IHtmlLocalizer<UomoMacchina.Areas.Trasferte.Data.TrasferteViewModel> ModelLocalizer
@model UomoMacchina.Areas.Trasferte.Data.TrasferteViewModel

@* Index di Trasferte *@
@{
 
}
<div class="row justify-content-start align-items-center">
    <div class="col">
        <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#tabellaTrasferte" aria-expanded="false" aria-controls="tabellaTrasferte"><h1>Trasferte</h1></button>
        <div class="col-1 align-self-center ">
            <i class="fa-solid fa-square fa-2x " style="color: purple;"></i>
        </div>
    </div>
    <div class="col">
        <ul class="navbar-nav flex-wrap ms-auto">
            <li>
                <a class="Nuovo btn btn-light ms-2" v-on:click='navigateToEdit(null, "Trasferte", dataNew)' title="Inserisci un nuovo elemento">
                    <i class="fa-solid fa-plus"></i>&nbsp;Nuovo
                </a>
            </li>
        </ul>
    </div>
</div>

<div id="tabellaTrasferte" class="row text-center collapse">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Data Inizio
                </th>
                <th>
                    Data Fine
                </th>
                <th>
                    Chilometri (Km)
                </th>
                <th>
                    Auto Aziendale
                </th>
                <th>
                    Commessa
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.trasferte.trasferte.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="trasferta in model.trasferte.trasferte" v-on:click='navigateToEdit(trasferta.id, "Trasferte")'>
                
                <td class="text-nowrap">
                    {{trasferta.dataInizio.split('T')[0]}}
                </td>
                <td class="text-nowrap">
                    {{trasferta.dataFine.split('T')[0]}}
                </td>
                <td class="text-nowrap">
                    {{trasferta.chilometri}}
                </td>
                <td class="text-nowrap">
                    {{trasferta.autoAziendale}}
                </td>
                <td class="text-nowrap">
                    {{trasferta.autoAziendale ? 'Si' : 'No'}}
                    {{trasferta.commessa}}
                </td>
                <td class="text-nowrap">
                    {{trasferta.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

@section styles {
    <link href="~/css/richieste.css" rel="stylesheet" />
}

@section scripts {
    
}
