@inject IHtmlLocalizer<UomoMacchina.Areas.Rendicontazioni.Data.RendicontazioniViewModel> ModelLocalizer
@model UomoMacchina.Areas.Rendicontazioni.Data.RendicontazioniViewModel

@* Index di Rendicontazioni *@
@{
 
}
 <ul class="navbar-nav flex-wrap ms-auto">

    <li>
        <a class="Nuovo btn btn-light ms-2" href="@Url.Action(MVC.Rendicontazioni.Rendicontazioni.New())" title="Inserisci un nuovo elemento">
            <i class="fa-solid fa-plus"></i>&nbsp;Nuovo
        </a>
        @* <a class="modifica btn btn-light ms-2" title="Modifica un elemento">
            <i class="fa-solid fa-plus"></i>&nbsp;Modifica
        </a>
        <a class="elimina btn btn-light ms-2" title="Elimina un elemento" href="@Url.Action(MVC.Rendicontazioni.Rendicontazioni.Delete())">
            <i class="fa-solid fa-plus"></i>&nbsp;Elimina
        </a> *@
    </li>
</ul> 

<h1>Rendicontazioni</h1>
<div class="text-center">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    OreTotali
                </th>
                <th>
                    Data
                </th>
                <th>
                    OraInizio
                </th>
                <th>
                    OraFine
                </th>
                <th>
                    Commessa
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.rendicontazioni.rendicontazioni.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="rendicontazione in model.rendicontazioni.rendicontazioni" onclick="javascript:utilities.navigateUrlExcludeOnitNotNavigate('@Url.Action(MVC.Rendicontazioni.Rendicontazioni.Edit(@Model.Id))')">
                <td class="text-nowrap">
                    {{rendicontazione.oreTotali}}
                </td>
                <td class="text-nowrap">
                    {{rendicontazione.data}}
                </td>
                <td class="text-nowrap">
                    {{rendicontazione.oraInizio}}
                </td>
                <td class="text-nowrap">
                    {{rendicontazione.oraFine}}
                </td>
                <td class="text-nowrap">
                    {{rendicontazione.commessa}}
                </td>
                <td class="text-nowrap">
                    {{rendicontazione.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

@section styles {
    <link href="~/css/richieste.css" rel="stylesheet" />
}

