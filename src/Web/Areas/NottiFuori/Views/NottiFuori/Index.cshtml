@using Core.Models;
@inject IHtmlLocalizer<UomoMacchina.Areas.NottiFuori.Data.NottiFuoriViewModel> ModelLocalizer
@model UomoMacchina.Areas.NottiFuori.Data.NottiFuoriViewModel

@* Index di NottiFuori *@
@{
 
}
<div class="row align-items-center">

    <i class=" col-auto fa fa-square fa-2x "></i>
    <h1 class="col-6" data-bs-toggle="collapse" data-bs-target="#tabellaNottiFuori" aria-expanded="true" aria-controls="tabellaNottiFuori">Notti Fuori</h1>
    <a class="col-2 btn btn-light" v-on:click='navigateToEdit(null, "NottiFuori", dataNew)' title="Inserisci un nuovo elemento">
        <i class="fa-solid fa-plus"></i>&nbsp;Nuovo
    </a>
</div>

<div id="tabellaNottiFuori" class="row text-center collapse">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Data
                </th>
                <th>
                    Tipo Viaggio
                </th>                
                <th>
                    Commessa
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.nottiFuori.nottiFuori.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="notteFuori in model.nottiFuori.nottiFuori " v-on:click='navigateToEdit(notteFuori.id, "NottiFuori")'>
                
                <td class="text-nowrap">
                    {{notteFuori.data.split('T')[0]}}
                </td>
                <td class="text-nowrap">
                    {{notteFuori.tipoViaggio}}
                </td>
                <td class="text-wrap">
                    {{notteFuori.commessa}}
                </td>
                <td class="text-wrap">
                    {{notteFuori.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

@section styles {
    <link href="~/css/richieste.css" rel="stylesheet" />
}

@section scripts {
    
}
