@using Core.Models;
@inject IHtmlLocalizer<UomoMacchina.Areas.NottiFuori.Data.NottiFuoriViewModel> ModelLocalizer
@model UomoMacchina.Areas.NottiFuori.Data.NottiFuoriViewModel

@* Index di NottiFuori *@
@{
 
}
<div class="row justify-content-start align-items-center">
    <div class="col">
        <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#tabellaNottiFuori" aria-expanded="false" aria-controls="tabellaNottiFuori"><h1>NottiFuori</h1></button>
    </div>
    <div class="col">
        <ul class="navbar-nav flex-wrap ms-auto">
            <li>
                <a class="Nuovo btn btn-light ms-2" href="@Url.Action(MVC.NottiFuori.NottiFuori.New())" title="Inserisci un nuovo elemento">
                    <i class="fa-solid fa-plus"></i>&nbsp;Nuovo
                </a>
            </li>
        </ul>
    </div>
</div>


<div id="tabellaNottiFuori" class="text-center collapse multi-collapse">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Tipo Viaggio
                </th>
                <th>
                    Data
                </th>
                <th>
                    Commessa
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.nottiFuori.nottiFuori.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="notteFuori in model.nottiFuori.nottiFuori " v-on:click='navigateToEdit(notteFuori.id, "NottiFuori")'>
                
                <td class="text-nowrap">
                    {{notteFuori.tipoViaggio}}
                </td>
                <td class="text-nowrap">
                    {{notteFuori.data}}
                </td>
                <td class="text-nowrap">
                    {{notteFuori.commessa}}
                </td>
                <td class="text-nowrap">
                    {{notteFuori.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

@section styles {
    <link href="~/css/richieste.css" rel="stylesheet" />
}

@section scripts {
    
}
