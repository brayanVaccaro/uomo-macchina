@using Core.Models;
@inject IHtmlLocalizer<UomoMacchina.Areas.Ferie.Data.FerieViewModel> ModelLocalizer
@model UomoMacchina.Areas.Ferie.Data.FerieViewModel

@* Index di Ferie *@


<ul class="navbar-nav flex-wrap ms-auto">

    <li>
        <a class="Nuovo btn btn-light ms-2" href="@Url.Action(MVC.Ferie.Ferie.New())" title="Inserisci un nuovo elemento">
            <i class="fa-solid fa-plus"></i>&nbsp;Nuovo
        </a>
        
    </li>
</ul>


<div class="container d-flex flex-col ">
    <div class="col-4">
        <h1>Ferie</h1>
    </div>
    <div class="col-1 align-self-center ">
        <i class="fa-solid fa-square fa-2x bg-secondary"></i>
    </div>
</div>



<div class="text-center">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Data Inizio
                </th>
                <th>
                    Data Fine
                </th>
                <th>
                    Durarata (Giorni)
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.ferie.ferie.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="ferie in model.ferie.ferie" v-on:click='navigateToEdit(ferie.id, "Ferie" )'>
                
                <td class="text-nowrap">
                    {{ferie.dataInizio}}
                </td>
                <td class="text-nowrap">
                    {{ferie.dataFine}}
                </td>
                <td class="text-nowrap">
                    {{ferie.durata}}
                </td>
                <td class="text-nowrap">
                    {{ferie.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

@section styles {
    <link href="~/css/richieste.css" rel="stylesheet" />
}

@section scripts {
    
}
