@using Core.Models;
@inject IHtmlLocalizer<UomoMacchina.Areas.Ferie.Data.FerieViewModel> ModelLocalizer
@model UomoMacchina.Areas.Ferie.Data.FerieViewModel

@* Index di Ferie *@
@{
 
}
<div class="row align-items-center">

    <i class=" col-auto fa fa-square fa-2x "></i>
    <h1 class="col-6" data-bs-toggle="collapse" data-bs-target="#tabellaFerie" aria-expanded="true" aria-controls="tabellaFerie">Ferie</h1>
    <a class="col-2 btn btn-light" v-on:click='navigateToEdit(null, "Ferie", dataNew)' title="Inserisci un nuovo elemento">
        <i class="fa-solid fa-plus"></i>&nbsp;Nuovo
    </a>
</div>

<div id="tabellaFerie" class="row text-center collapse">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Data Inizio
                </th>
                <th>
                    Data Fine
                </th>
                <th>
                    Durarata (Giorni)
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.ferie.ferie.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="ferie in model.ferie.ferie" v-on:click='navigateToEdit(ferie.id, "Ferie")'>
                
                <td class="text-nowrap">
                    {{ferie.dataInizio.split('T')[0]}}
                </td>
                <td class="text-nowrap">
                    {{ferie.dataFine.split('T')[0]}}
                </td>
                <td class="text-nowrap">
                    {{ferie.durata}}
                </td>
                <td class="text-wrap">
                    {{ferie.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

@section styles {
    <link href="~/css/richieste.css" rel="stylesheet" />
}

@section scripts {
    
}
