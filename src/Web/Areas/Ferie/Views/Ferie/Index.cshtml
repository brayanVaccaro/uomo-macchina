<h1>Ferie</h1>
<div class="text-center">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>
                    DataInizio
                </th>
                <th>
                    DataFine
                </th>
                <th>
                    Durarata
                </th>
                <th>
                    Dettagli
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-if="model.ferie.ferie.length == 0">
                <td scope="row" colspan="5">
                    Nessun elemento trovato
                </td>
            </tr>
            <tr v-for="ferie in model.ferie.ferie">
                
                <td class="text-nowrap">
                    {{ferie.dataInizio}}
                </td>
                <td class="text-nowrap">
                    {{ferie.dataFine}}
                </td>
                <td class="text-nowrap">
                    {{ferie.durata}}
                </td>
                <td class="text-nowrap">
                    {{ferie.dettagli}}
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <nav class="navbar navbar-expand justify-content-md-center">
                        <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                    </nav>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

